        let selectedCourses = new Set();

        function renderCourses() {
            const containers = {
                empresarial: document.getElementById('container-empresarial'),
                academica: document.getElementById('container-academica'),
                socioemocional: document.getElementById('container-socioemocional'),
                fisica: document.getElementById('container-fisica'),
                espiritual: document.getElementById('container-espiritual')
            };

            courses.forEach(course => {
                const card = document.createElement('div');
                card.className = 'bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition duration-300 cursor-pointer relative border border-gray-100 flex flex-col';
                card.id = `card-${course.id}`;
                card.onclick = () => toggleSelection(course.id);

                card.innerHTML = `
                    <div class="p-6 flex-grow">
                        <div class="flex justify-between items-start mb-2">
                            <h4 class="text-lg font-bold text-gray-800 pr-6 leading-tight">${course.title}</h4>
                            <div class="absolute top-4 right-4">
                                <div class="w-6 h-6 rounded-full border-2 border-gray-300 flex items-center justify-center bg-white indicator">
                                    <i data-lucide="check" class="w-4 h-4 text-blue-600 check-icon"></i>
                                </div>
                            </div>
                        </div>
                        <p class="text-blue-600 font-bold text-xl mb-4">${course.price}</p>
                        
                        <div class="space-y-2 text-sm text-gray-600 mb-4">
                            <div class="flex items-center gap-2">
                                <i data-lucide="users-round" class="w-4 h-4 text-purple-500"></i>
                                <span class="font-medium text-purple-700">Cupos: ${course.capacity}</span>
                            </div>
                            <div class="flex items-center gap-2">
                                <i data-lucide="clock" class="w-4 h-4 text-gray-400"></i>
                                <span>${course.duration} • ${course.frequency}</span>
                            </div>
                            <div class="flex items-center gap-2">
                                <i data-lucide="users" class="w-4 h-4 text-gray-400"></i>
                                <span>${course.age}</span>
                            </div>
                            <div class="flex items-center gap-2">
                                <i data-lucide="calendar" class="w-4 h-4 text-gray-400"></i>
                                <span>${course.schedule}</span>
                            </div>
                        </div>
                        
                        <div class="bg-gray-50 p-3 rounded-lg text-xs text-gray-700 border border-gray-100">
                            <strong>Contenido:</strong> ${course.details}
                        </div>
                    </div>
                    <div class="p-4 bg-gray-50 border-t border-gray-100 mt-auto text-center">
                        <span class="text-blue-600 font-semibold select-text text-sm">Clic para seleccionar</span>
                        <span class="text-green-600 font-bold check-icon text-sm hidden flex items-center justify-center gap-1">
                            <i data-lucide="check-circle" class="w-4 h-4"></i> Seleccionado
                        </span>
                    </div>
                `;

                if (containers[course.category]) {
                    containers[course.category].appendChild(card);
                }
            });
            
            // Re-initialize icons since we added dynamic HTML
            lucide.createIcons();
        }

        function toggleSelection(id) {
            const card = document.getElementById(`card-${id}`);
            if (selectedCourses.has(id)) {
                selectedCourses.delete(id);
                card.classList.remove('card-selected');
            } else {
                selectedCourses.add(id);
                card.classList.add('card-selected');
            }
            updateCounters();
        }

        function updateCounters() {
            const count = selectedCourses.size;
            document.getElementById('counter-desktop').textContent = count;
            document.getElementById('counter-mobile').textContent = count;
        }

        function sendWhatsApp() {
            if (selectedCourses.size === 0) {
                alert("Por favor seleccione al menos un curso antes de solicitar información.");
                return;
            }

            const phoneNumber = "59168811019";
            let message = "Hola, me gustaría solicitar los siguientes cursos para la gestión 2026:\n\n";
            
            let total = 0;
            selectedCourses.forEach(id => {
                const course = courses.find(c => c.id === id);
                message += `✅ *${course.title}*\n   (${course.duration} - ${course.price})\n`;
            });

            message += "\nPor favor, quedo atento a su respuesta para coordinar los detalles.";

            const url = `https://wa.me/${phoneNumber}?text=${encodeURIComponent(message)}`;
            window.open(url, '_blank');
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            renderCourses();
        });
    </script>
</body>
